---
const response = await fetch(
    "https://api.themoviedb.org/3/movie/popular?api_key=4e44d9029b1270a757cddc766a1bcb63&language=en-US&page=1",
);

const poster_url = "https://image.tmdb.org/t/p/w500"
const detail = "/detail/"
const data = await response.json();
---

<div class="row">
    {
        data.results.map((item) => (
            <div class="col-lg-3">
                <div class="card mt-4" style="width: 18 rem;">
                    <a href= {detail + item.id}>
                        <img src= {poster_url + item.poster_path}  alt="poster" class="card-img-top"/>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{item.title}</h5>
                    </div>
                </div>
            </div>
        ))
    }
</div>
